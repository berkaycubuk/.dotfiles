#!/bin/bash

if [ ! -f "/tmp/pomo.data" ] ; then
    value=0
else
    value=`cat /tmp/pomo.data`
fi

function convert_time () {
    num=$1
    min=0

    if ((num<=0)); then
        ((num=num*-1))
        if ((num>59)); then
            ((sec=num%60))
            ((num=num/60))
            ((min=num))
        else
            ((sec=num))
        fi

        echo "ðŸ”¥ Time passed: ${min}:${sec}"
    else
        if ((num>59)); then
            ((sec=num%60))
            ((num=num/60))
            ((min=num))
        else
            ((sec=num))
        fi

        echo "ðŸ… Time left: ${min}:${sec}"
    fi
}

case $1 in
    
    start)
        value=$(date +"%s")
        value=$((value + (60 * 25)))
        echo "â° Timer started"
        ;;
    stop)
        value=0
        echo "â° Timer stopped"
        ;;
    *)
        if [ ${value} != 0 ]; then
            leftTime=`date +"%s"`
            leftTime=$((value - leftTime))
            convert_time leftTime
        fi
        ;;
esac

echo "${value}" > /tmp/pomo.data
